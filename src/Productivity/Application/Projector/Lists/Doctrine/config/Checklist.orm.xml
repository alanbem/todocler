<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Productivity\Application\Projector\Lists\Doctrine\Entity\Checklist" table="lists">
        <id name="id" type="guid" column="id">
            <generator strategy="NONE"/>
        </id>
        <field name="userId" type="guid" column="user_id"/>
        <field name="name" column="name"/>
        <field name="updatedAt" type="datetimetz_immutable" column="updated_at" precision="6"/>
        <field name="createdAt" type="datetimetz_immutable" column="created_at" precision="6"/>
        <one-to-many field="tasks" target-entity="Productivity\Application\Projector\Lists\Doctrine\Entity\Task" mapped-by="list">
            <cascade>
                <cascade-persist />
            </cascade>
        </one-to-many>
        <indexes>
            <index columns="user_id" name="search_by_list_owner"/>
            <index columns="created_at" name="sort_by_list_creation_time"/>
        </indexes>
    </entity>
</doctrine-mapping>
